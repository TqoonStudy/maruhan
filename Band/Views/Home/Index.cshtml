@{
    ViewBag.Title = "밴드 홈";
}
@Html.Raw(File.ReadAllText(Server.MapPath("/KISA_SHA256.asp")));

<div class="indexBack">

    <div>
        <h4>내 밴드 <span class="groupCount">5</span></h4>
    </div>

    <div class="row" ng-app="main" ng-controller="BandController">
        <section class="joinBandList">
            <ul class="bandList">
                <li ng-repeat="banditem in list">
                    <a href="#">
                        <form id="form{{banditem.Id}}" action="/Board/List" method="post">
                            <div ng-click="getBoard()">
                                <input type="hidden" name="groupId" value="{{banditem.Id}}" />
                                <div style="background-color:#fff; height:145px;"><img id="bandImg" ng-src="{{banditem.Img}}"></div>
                                <div style="position:relative;background-color:{{banditem.ColorCode}}; height:15px;"></div>
                                <div style="height:40px;line-height: 40px; text-align:center;">
                                    <span style="display: inline-block; vertical-align: middle; line-height: normal;">{{banditem.Groupname}}</span>
                                </div>
                            </div>
                        </form>
                    </a>
                </li>

                <li class="newBandCreate"><a href="/Group/Create"><div style="background-image:url('/Content/img/plus.png'); background-size:160px 160px; height:160px;"></div><div style="text-align:center;"><span>새로운 밴드 생성</span></div></a></li>
            </ul>
        </section>
    </div>

</div>